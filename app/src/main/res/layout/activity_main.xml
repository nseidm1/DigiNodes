<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar android:layout_width="match_parent" android:id="@+id/toolbar"
                                       android:layout_height="?android:attr/actionBarSize" android:background="@color/colorPrimary">

        <ProgressBar android:id="@+id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:layout_gravity="end"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView android:id="@+id/messages" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Messages" android:gravity="center" android:textSize="18sp" android:textStyle="bold"
              android:background="#cccccc"/>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent" android:id="@+id/recycler_info"
                                               android:layout_height="0dp" android:layout_weight="1"/>

    <TextView android:id="@+id/count" android:padding="16dp" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Nodes" android:gravity="center" android:textSize="18sp" android:textStyle="bold"
              android:background="#cccccc"/>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent" android:id="@+id/recycler_nodes"
                                               android:layout_height="0dp" android:layout_weight="1"/>

</LinearLayout>